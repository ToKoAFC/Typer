@model Typer.ViewModels.Views.AdminMatch.VMAdminMatchIndex

@{
    ViewBag.Title = "CreateMatchScore";
}

<h2>Edytuj wyniki</h2>

@using (Html.BeginForm("CreateMatchScore", "AdminMatch", FormMethod.Post))
{
    for (int i=0; i<Model.Matches.Count; i++)
    {
        @Html.HiddenFor(x => Model.Matches[i].MatchId)
        <div class="row">
            <div class="col-md-2">
                <p>@Model.Matches[i].HomeTeamName</p>
            </div>
            <div class="col-md-2">
                @Html.EditorFor(x => Model.Matches[i].HomeTeamGoals)
            </div>
            <div class="col-md-2">
                @Html.EditorFor(x => Model.Matches[i].AwayTeamGoals)
            </div>
            <div class="col-md-2">
                @Model.Matches[i].AwayTeamName
            </div>
        </div>
    }
    <button type="submit">Zapisz</button>

}

