                <div class="col-md-2">
                    <p>@Model.Scores[i].HomeTeamName</p>
                </div>
                <div class="col-md-2">                
                        @Html.EditorFor(x => x.Scores[i].HomeTeamGoals)
                </div>
                <div class="col-md-2">
                        @Html.EditorFor(x => x.Scores[i].AwayTeamGoals)
                </div>
                <div class="col-md-2">
                    <p>@Model.Scores[i].AwayTeamName</p>
                </div>
            </div>            
         }
        <button type="submit">Zapisz</button>
    }
