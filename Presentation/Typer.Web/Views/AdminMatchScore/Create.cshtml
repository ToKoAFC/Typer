@model Typer.ViewModels.Views.AdminMatchScore.VMAdminMatchScoreIndex

<h2>Dodaj wynik</h2>

@using (Html.BeginForm("Create", "AdminMatchScore", FormMethod.Post))
{

    @*foreach (var match in Model.Scores)
    {
        <div class="col-md-2">
            @Html.EditorFor(x => match.AwayTeamGoals)
