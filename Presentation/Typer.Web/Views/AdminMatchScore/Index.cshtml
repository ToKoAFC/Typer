@model Typer.ViewModels.Views.AdminMatchScore.VMAdminMatchScoreIndex
@{
    ViewBag.Title = "Index";
}

<div class="row page-header">
    <div class="col-md-11">
        <h4 class="headline-title">Zarządzaj wynikami</h4>
    </div>
    <div class="col-md-1">
        @Html.ActionLink("Dodaj wynik", "Create", "AdminMatchScore", null, new { @class = "btn btn-default" })
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        @foreach (var matchScore in Model.Scores)
        {
            <div class="row">
                <p>@($"{matchScore.HomeTeamName} {matchScore.HomeTeamGoals} : {matchScore.AwayTeamGoals} {matchScore.AwayTeamName}")</p>
            </div>
        }
    </div>
</div>