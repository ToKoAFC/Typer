<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Typer</title>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <link rel="stylesheet" href="~/Content/date-picker/datepicker.css">
    <script src="~/Scripts/date-picker/datepicker.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TYPER", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Typuj", "Index", "Typer", null, new { @class = "navbar-brand" } )
                @Html.ActionLink("Terminarz", "Index", "Calendar", null, new { @class = "navbar-brand" })
                @Html.ActionLink("Statystyki", "Index", "Statistic", null, new { @class = "navbar-brand" })
                @Html.ActionLink("Kontakt", "Index", "Profile", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Dodaj klub","Index", "AdminTeam" )</li>
                    <li>@Html.ActionLink("Wyświetl listę zespołów", "ShowTeams", "AdminTeam")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                <p class="nav navbar-text navbar-right">Hello, @User.Identity.Name!</p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @Html.ActionLink("AdminPanel", "Index", "Admin")
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
