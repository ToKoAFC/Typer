@model Typer.ViewModels.Views.Typer.VMTyperIndex


@using (Html.BeginForm("ChangeMatchPredictions", "Typer", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @for (int i = 0; i < Model.Matches.Count; i++)
        {
            <div class="form-group">
                <div class="control-label col-md-1">@Model.Matches[i].HomeTeamName</div>
                <div class="col-md-5">
                    @Html.EditorFor(model => Model.Matches[i].HomeTeamGoals, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.Matches[i].HomeTeamGoals, "", new { @class = "text-danger" })
                </div>
                <div class="control-label col-md-1">@Model.Matches[i].AwayTeamName</div>
                <div class="col-md-5">
                    @Html.EditorFor(model => Model.Matches[i].AwayTeamGoals, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.Matches[i].AwayTeamGoals, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.HiddenFor(x => Model.Matches[i].MatchId)
            @Html.HiddenFor(x => Model.Matches[i].MatchPredictionId)
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
